<resources>

    <!-- General for API 21 and above -->
    <style name="ThemeGenAppAndroid" parent="ThemeGenAppAndroid.Base">

        <!-- Some general -->
        <item name="android:statusBarColor">@color/general_colorPrimary</item>
        <item name="android:navigationBarColor">@color/general_colorPrimary</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Enable Transition -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>

        <!-- Transitions -->
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <!-- SplashScreen -->
    <style name="ThemeGenAppAndroid.SplashScreen" parent="ThemeGenAppAndroid.Base">
        <item name="android:navigationBarColor">@color/general_colorPrimary</item>
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

</resources>